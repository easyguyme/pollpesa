<div class="row">
  <div class="col-md-offset-3 col-md-6 col-md-offset-3">
      <h3 class="text-center">{{title}} </h3>
  </div>
</div>
<div class="col-md-offset-3 col-md-6 col-md-offset-3">
<form class="form-horizontal" method="post" action="/candidate/update">
  <div class="form-group">
    <div class="col-sm-10">
      <input type="text" id="name" name="name" placeholder="Name" value="{{candidate.name}}" class="form-control">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <select name="region" id="region" class="form-control">
      <option value="{{candidate.regionId}}">{{candidate.region.dataValues.name}}</option>
        <option value="">--SELECT--</option>
        {{#if regions}}
          {{#each regions}}
            <option value="{{dataValues.id}}">{{dataValues.name}}</option>
          {{/each}}
        {{/if}}
      </select>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <select name="position" id="position" class="form-control">
        <option value="{{candidate.position}}">{{candidate.position}}</option>
        <option value="">--SELECT--</option>
        <option value="president">President</option>
        <option value="Governor">Governor</option>
        <option value="Senator">Senator</option>
        <option value="MP">MP</option>
        <option value="MCA">MCA</option>
        <option value="Women Rep">Women Rep</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <input type="text" id="odd" name="odd" placeholder="Odd" value={{candidate.odd}} class="form-control">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <input type="text" id="probability" name="probability" placeholder="0 to 100" value="{{candidate.probability}}" class="form-control">
    </div>
  </div>
  <input type="hidden" id="id" name="id" value={{candidate.id}}>
  <div class="form-group">
    <div class="">
      <button type="submit" class="button scrolly">Update</button>
    </div>
  </div>
</form>
</div>