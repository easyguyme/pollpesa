<div class="col-md-offset-3 col-md-6 col-md-offset-3">
<form class="form-horizontal" method="post" action="/region/update/{{id}}">
  <div class="form-group">
    <div class="col-sm-10">
      <input type="text" id="name" name="name" placeholder="Name" value="{{region.name}}" class="form-control">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <select name="category" class="form-control">
        <option value="{{region.categoryId}}">{{region.category.dataValues.name}}</option>
        <option value="">--SELECT--</option>
        {{#if categories}}
          {{#each categories}}
            <option value="{{dataValues.id}}">{{dataValues.name}}</option>
          {{/each}}
        {{/if}}
      </select>
    </div>
  </div>
  <input type="hidden" id="id" name="id" value="{{id}}">
  <div class="form-group">
    <div class="">
      <button type="submit" class="button btn btn-warning">Update</button>
    </div>
  </div>
</form>
</div>