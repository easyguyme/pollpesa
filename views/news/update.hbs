<div class="col-md-offset-3 col-md-6 col-md-offset-3">
<form class="form-horizontal" method="post" action="update/">
  <div class="form-group">
    <div class="col-sm-10">
      <input type="text" id="name" name="name" placeholder="Name" value="{{news.name}}"  class="form-control">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <textarea name="description" id="description">{{news.desc}}</textarea>
    </div>
  </div>
  <input type="hidden" id="id" name="id" value="{{news.id}}">
  <div class="form-group">
    <div class="">
      <button type="submit" class="button scrolly">Update</button>
    </div>
  </div>
</form>
</div>