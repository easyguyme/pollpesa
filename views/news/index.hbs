
<div class="panel panel-primary">
	<div class="panel panel-body">
		<h3> News </h3>
		<a href="/news/create" id="candidate-link" class="skel-layers-ignoreHref"><span class="icon fa-users">Add News</span></a>
			<table class="table table-hover">
				<thead>
					<th>ID</th>
					<th>Name</th>
					<th>Description</th>
					<th>Created At</th>
					<th>Actions</th>
				</thead>
				<tbody>				
					{{#each news}}
					<tr>
						<td>{{dataValues.id}}</td>
						<td>{{dataValues.name}}</td>
						<td>{{{dataValues.desc}}}</td>
						<td>{{dataValues.createdAt}}</td>
						<td>
		          			<a href="news/update/{{dataValues.id}}">Edit</a>
						</td>
					</tr>
					{{/each}}
				</tbody>
			</table>
	</div>
</div>